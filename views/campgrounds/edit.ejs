<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" value="<%=camp.title%>" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" value ="<%=camp.location %>" name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" value ="<%=camp.image %>" name="campground[image]" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Campground Price</label>
                    <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.0" value ="<%=camp.price %>" aria-label="Price" aria-describedby="price-label"
                    name="campground[price]" required>
                  </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=camp.location %></textarea>
                
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button> 
                </div>
                   
        
            </form>
            <a href="/campgrounds/<%=camp._id%>">Back To Campground</a>
        </div>
        
    </div>
    